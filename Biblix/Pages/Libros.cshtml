@page
@model Biblix.Pages.Libros
@{
    ViewData["Title"] = "Lista de Libros";
}

<h1>Libros</h1>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Año</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var libro in Model.ListaLibros)
    {
        <tr>
            <td>
                <a asp-page="/LibroDetalle" asp-route-id="@libro.Id">
                    @libro.Titulo
                </a>
            </td>
            <td>@libro.Autor</td>
            <td>@libro.Año</td>
        </tr>
    }
    </tbody>
</table>
