@page
@model Biblioteca.Pages.Catalogo.CrearModel

<div class="form-card">
    <h2>Agregar libro al catálogo</h2>

    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label>Título</label>
            <input asp-for="Libro.Titulo" class="form-control-custom" required />
        </div>

        <div class="form-group">
            <label>Autor</label>
            <input asp-for="Libro.Autor" class="form-control-custom" required />
        </div>

        <div class="form-group">
            <label>Año</label>
            <input asp-for="Libro.Anio" type="number" class="form-control-custom" required />
        </div>

        <div class="form-group">
            <label>Descripción</label>
            <textarea asp-for="Libro.Descripcion" class="form-control-custom" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label>Imagen del libro</label>
            <input type="file" name="Imagen" class="form-control-custom" />
        </div>

        <button type="submit" class="btn btn-success btn-guardar">
            Guardar en catálogo
        </button>

        <div style="text-align:center; margin-top:10px">
            <a asp-page="Index">Volver</a>
        </div>
    </form>
</div>
