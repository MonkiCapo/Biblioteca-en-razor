@page
@model IndexModel

<h2>Mis libros</h2>

<a asp-page="Crear">Agregar libro</a>

<table class="table">
    <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Año</th>
        <th>Descripcion</th>
        <th></th>
    </tr>

@foreach (var libro in Model.Libros)
{
    <tr>
        <td>@libro.Titulo</td>
        <td>@libro.Autor</td>
        <td>@libro.Anio</td>
        <td>@libro.Descripcion</td>
        <td>
            <a asp-page="Editar" asp-route-id="@libro.Id">Editar</a> |
            <a asp-page="Eliminar" asp-route-id="@libro.Id">Eliminar</a>
        </td>
    </tr>
}
</table>
