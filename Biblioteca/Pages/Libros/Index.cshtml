@page
@model IndexModel

<h2>Mis libros</h2>

<table class="table">
    <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Año</th>
        <th>Descripcion</th>
        <th></th>
    </tr>

@foreach (var libro in Model.Libros)
{
    <tr>
        <td>@libro.Titulo</td>
        <td>@libro.Autor</td>
        <td>@libro.Anio</td>
        <td>@libro.Descripcion</td>
        <td>
            <a asp-page="Detalles" asp-route-id="@libro.Id">Ver</a> |
            <a asp-page="Editar" asp-route-id="@libro.Id">Editar</a> |
            <a asp-page="Eliminar" asp-route-id="@libro.Id">Eliminar</a>
        </td>
    </tr>
}
</table>

<p>Si queres ver más libros, podes</p>
<a asp-page="/Catalogo/Index" class="btn btn-info">Ver catálogo de libros</a>
