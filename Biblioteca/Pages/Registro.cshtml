@page
@model RegistroModel

<div class="form-card">
    <h2>Registro</h2>

    <form method="post">
        <div class="form-group">
            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
        </div>

        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="ContraseÃ±a" type="password" />
        </div>

        <button type="submit" class="btn btn-success">Registrarse</button>
    </form>

    @if (Model.Error != null)
    {
        <div class="alert alert-danger mt-3">@Model.Error</div>
    }
</div>
