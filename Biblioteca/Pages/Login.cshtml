@page
@model LoginModel

<h2>Iniciar Sesión</h2>

<form method="post" asp-antiforgery="true">
    <input asp-for="Email" placeholder="Email" />
    <input asp-for="Password" type="password" placeholder="Contraseña" />
    <button type="submit">Entrar</button>
</form>

@if (Model.Error != null)
{
    <p>@Model.Error</p>
}
